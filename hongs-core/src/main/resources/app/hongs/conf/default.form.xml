<root>
    <!-- 查询用途与字段类型的映射 -->
    <enum name="__cases__">
        <value code="findable" type="set">string,search,hidden,text,email,url,tel,textcase</value>
        <value code="sortable" type="set">string,search,hidden,text,email,url,tel,date,time,datetime,number,range,slider,switch,sorted</value>
        <value code="filtable" type="set">string,search,hidden,text,email,url,tel,date,time,datetime,number,range,slider,switch,enum,select,radio,check</value>
        <value code="listable" type="set">string,search,hidden,text,email,url,tel,date,time,datetime,number,range,slider,switch,enum,select,radio,check,textarea,textcase,fork,pick,file,upload,image,audio,video</value>
    </enum>
    <!-- 存储类型与字段类型的映射 -->
    <enum name="__saves__">
        <value code="string" type="set">string,text,textarea,textcase,hidden,color,email,url,tel,fork,enum,select,radio,check,file,upload,image,video,audio,search,stored</value>
        <value code="number" type="set">number,range,slider,switch,sorted</value>
        <value code="date"   type="set">date,time,datetime</value>
        <!-- 下为 Lucene 特有 -->
        <value code="object" type="set">object,form,json</value>
        <value code="stored" type="set">stored,textarea</value>
        <value code="search" type="set">search,textcase</value>
        <value code="sorted" type="set">sorted</value>
    </enum>
    <!-- 字段校验类型映射 -->
    <enum name="__types__">
        <!-- String -->
        <value code="string">string</value>
        <value code="hidden">string</value>
        <value code="text">string</value>
        <value code="search">string</value><!-- Lucene 中可分词查询 -->
        <value code="stored">string</value><!-- Lucene 特有仅存不查 -->
        <value code="textarea">string</value><!-- Lucene 中同 stored -->
        <value code="textcase">string</value><!-- Lucene 中同 search -->
        <value code="color">string</value>
        <value code="email">string</value>
        <value code="url">string</value>
        <value code="tel">string</value>
        <!-- Number -->
        <value code="number">number</value>
        <value code="range">number</value>
        <value code="slider">number</value>
        <value code="switch">number</value>
        <value code="sorted">number</value> <!-- Lucene 特有仅能排序 -->
        <!-- Date -->
        <value code="date">date</value>
        <value code="time">date</value>
        <value code="datetime">date</value>
        <!-- File -->
        <value code="file">file</value>
        <value code="upload">file</value>
        <value code="image">file</value>
        <value code="audio">file</value>
        <value code="video">file</value>
        <!-- Enum -->
        <value code="enum">enum</value>
        <value code="select">enum</value>
        <value code="radio">enum</value>
        <value code="check">enum</value>
        <!-- Form -->
        <value code="form">form</value>
        <!-- Fork -->
        <value code="fork">fork</value>
    </enum>
    <!-- 文本校验正则映射 -->
    <enum name="__patts__">
        <value code="color"><![CDATA[^#[0-9A-Fa-f]{6}]]></value>
        <value code="email"><![CDATA[^\w+([+-.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$]]></value>
        <value code="url"><![CDATA[^([a-z]+:)?//[^\s]+$]]></value>
        <value code="tel"><![CDATA[^(\+[1-9])?\d\d{2,}$]]></value>
    </enum>

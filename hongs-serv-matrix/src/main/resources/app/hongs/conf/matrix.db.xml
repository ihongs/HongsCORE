<?xml version="1.0" encoding="UTF-8"?>

<db xmlns="http://hongs-core"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://hongs-core db.xsd">
    <config link="manage"/>
    <tables>
        <table name="unit"
               tableName="a_matrix_unit"
               primaryKey="id"
               model="app.hongs.serv.matrix.Unit">
        </table>
        <table name="form"
               tableName="a_matrix_form"
               primaryKey="id"
               model="app.hongs.serv.matrix.Form">
            <assoc type="BLS_TO"
                   name="unit"
                   foreignKey="unit_id">
            </assoc>
        </table>
        <table name="data"
               tableName="a_matrix_data"
               primaryKey="id">
            <assoc type="BLS_TO"
                   name="form"
                   foreignKey="form_id">
                <param name="fields">id,name</param>
            </assoc>
            <assoc type="BLS_TO"
                   name="user"
                   foreignKey="user_id"
                   tableName="member.user">
                <param name="fields">id,name</param>
            </assoc>
        </table>
    </tables>
</db>

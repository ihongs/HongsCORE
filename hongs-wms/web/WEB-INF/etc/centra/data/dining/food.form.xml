<?xml version="1.0" encoding="utf-8" standalone="no"?>
<root>
    <form name="food">
        <field name="@" repeated="" required="" rule="" text="菜品" type="">
            <param name="listable">?</param>
            <param name="sortable">?</param>
            <param name="fitrable">?</param>
            <param name="nameable">?</param>
        </field>
        <field name="id" repeated="" required="" rule="" text="ID" type="hidden"/>
        <field name="name" repeated="" required="true" rule="" text="名称" type="text">
            <param name="listable">true</param>
            <param name="sortable">true</param>
            <param name="srchable">true</param>
            <param name="fitrable">true</param>
            <param name="lucene-type">search</param>
        </field>
        <field name="type" repeated="" required="true" rule="" text="类别" type="select">
            <param name="conf">centra/data/dining/food</param>
            <param name="sortable">true</param>
            <param name="statable">true</param>
            <param name="listable">true</param>
            <param name="fitrable">true</param>
            <param name="selected">["热菜"]</param>
        </field>
        <field name="worth" repeated="" required="" rule="" text="原价" type="number">
            <param name="fitrable">true</param>
            <param name="sortable">true</param>
            <param name="listable">true</param>
        </field>
        <field name="price" repeated="" required="true" rule="" text="售价" type="number">
            <param name="fitrable">true</param>
            <param name="sortable">true</param>
            <param name="listable">true</param>
        </field>
        <field name="unit" repeated="" required="true" rule="" text="单位" type="select">
            <param name="conf">centra/data/dining/food</param>
            <param name="listable">true</param>
            <param name="sortable">true</param>
            <param name="selected">["份"]</param>
        </field>
        <field name="summary" repeated="" required="" rule="" text="简介" type="text">
            <param name="srchable">true</param>
            <param name="lucene-type">search</param>
        </field>
        <field name="content" repeated="" required="" rule="" text="详情" type="textarea">
            <param name="srchable">true</param>
            <param name="lucene-type">search</param>
        </field>
        <field name="picture" repeated="true" required="" rule="Thumb" text="图片" type="image">
            <param name="size">300*300</param>
            <param name="href">static/upload/data</param>
            <param name="path">static/upload/data</param>
            <param name="temp">static/upload/temp</param>
        </field>
        <field name="boost" repeated="" required="" rule="" text="权重" type="number">
            <param name="listable">true</param>
            <param name="sortable">true</param>
            <param name="default">0</param>
        </field>
        <field name="stat" repeated="" required="" rule="" text="状态" type="enum">
            <param name="conf">centra/data/dining/food</param>
            <param name="sortable">true</param>
            <param name="statable">true</param>
            <param name="listable">true</param>
            <param name="fitrable">true</param>
            <param name="selected">["正常"]</param>
        </field>
        <field name="ctime" repeated="" required="" rule="" text="创建时间" type="datetime">
            <param name="type">timestamp</param>
            <param name="default">=%now</param>
            <param name="default-create">yes</param>
            <param name="default-always">yes</param>
            <param name="editable">no</param>
            <param name="listable">true</param>
            <param name="sortable">true</param>
            <param name="fitrable">true</param>
        </field>
        <field name="mtime" repeated="" required="" rule="" text="修改时间" type="datetime">
            <param name="type">timestamp</param>
            <param name="default">=%now</param>
            <param name="default-create">no</param>
            <param name="default-always">yes</param>
            <param name="editable">no</param>
            <param name="listable">true</param>
            <param name="sortable">true</param>
            <param name="fitrable">true</param>
        </field>
        <field name="word" repeated="" required="" rule="" text="" type="search">
            <param name="editable">false</param>
            <param name="unstored">true</param>
        </field>
        <field name="cuid" repeated="" required="" rule="" text="" type="hidden">
            <param name="editable">false</param>
            <param name="default">=$uid</param>
            <param name="default-always">true</param>
            <param name="default-create">true</param>
        </field>
        <field name="muid" repeated="" required="" rule="" text="" type="hidden">
            <param name="editable">false</param>
            <param name="default">=$uid</param>
            <param name="default-always">true</param>
            <param name="default-create">false</param>
        </field>
    </form>
    <enum name="unit">
        <value code="份">份</value>
        <value code="个">个</value>
        <value code="盒">盒</value>
        <value code="条">条</value>
        <value code="两">两</value>
        <value code="斤">斤</value>
        <value code="公斤">公斤</value>
    </enum>
    <enum name="type">
        <value code="热菜">热菜</value>
        <value code="凉菜">凉菜</value>
        <value code="点心">点心</value>
        <value code="主食">主食</value>
        <value code="套餐">套餐</value>
    </enum>
    <enum name="stat">
        <value code="正常">正常</value>
        <value code="下架">下架</value>
    </enum>
</root>

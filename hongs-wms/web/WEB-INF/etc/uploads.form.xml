<root>
    <!-- 图片上传 -->
    <form name="image">
        <field name="file" type="image" rule="Thumb" required="yes" repeated="yes">
            <param name="thumb-extn">jpg</param>
            <param name="extn">jpg,gif,png,bmp,jpeg</param>
            <param name="path">${BASE_PATH}/static/upload/medium/image</param>
            <param name="href">${BASE_HREF}/static/upload/medium/image</param>
        </field>
    </form>
</root>
<?xml version="1.0" encoding="UTF-8"?>
<root>
    <!-- 评论 -->
    <form name="comment">
        <field name="note" type="string" required="">
            <param name="clean">yes</param>
            <param name="minlength">2</param>
            <param name="maxlength">140</param>
        </field>
        <field name="link" type="enum">
            <param name="conf">medium</param>
            <param name="enum">comment_link</param>
        </field>
    </form>
    <enum name="comment_link">
        <value code="article">文章</value>
        <value code="discuss">讨论</value>
    </enum>

    <!-- 举报 -->
    <form name="dissent">
        <field name="note" type="string">
            <param name="clean">yes</param>
            <param name="minlength">2</param>
            <param name="maxlength">140</param>
        </field>
        <field name="link" type="enum">
            <param name="conf">medium</param>
            <param name="enum">dissent_link</param>
        </field>
        <field name="cause" type="enum">
            <param name="conf">medium</param>
            <param name="enum">dissent_cause</param>
        </field>
        <field name="state" type="enum">
            <param name="conf">medium</param>
            <param name="enum">dissent_state</param>
        </field>
    </form>
    <enum name="dissent_href">
        <value code="comment">public/docket/comment/${id}</value>
        <value code="article">public/docket/news/${id}</value>
    </enum>
    <enum name="dissent_link">
        <value code="article">文章</value>
        <value code="discuss">讨论</value>
        <value code="comment">评论</value>
    </enum>
    <enum name="dissent_cause">
        <value code="1">虚假信息</value>
        <value code="2">敏感信息</value>
        <value code="3">淫秽色情</value>
        <value code="4">人身攻击</value>
        <value code="*">其他</value>
    </enum>
    <enum name="dissent_state">
        <value code="1">待处理</value>
        <value code="2">属实</value>
        <value code="3">诬陷</value>
        <value code="4">无聊</value>
    </enum>

    <!-- 打分 -->
    <form name="endorse">
        <field name="link">
            <param name="conf">medium</param>
            <param name="enum">endorse_link</param>
        </field>
        <field name="score" text="评分" type="number">
            <param name="type">int</param>
            <param name="min">0</param>
            <param name="max">5</param>
        </field>
    </form>
    <enum name="endorse_link">
        <value code="article">文章</value>
        <value code="discuss">讨论</value>
        <value code="comment">评论</value>
    </enum>

    <!-- 到访 -->
    <form name="impress">
        <field name="link">
            <param name="conf">medium</param>
            <param name="enum">impress_link</param>
        </field>
    </form>
    <enum name="impress_link">
        <value code="article">文章</value>
        <value code="discuss">讨论</value>
    </enum>

    <!-- 统计 -->
    <form name="statist">
        <field name="link">
            <param name="conf">medium</param>
            <param name="enum">statist_link</param>
        </field>
    </form>
    <enum name="statist_link">
        <value code="article">文章</value>
        <value code="discuss">讨论</value>
    </enum>
</root>

    <enum name="__patts__">
        <value code="email"><![CDATA[^([a-z0-9_\.\-\+]+)@([\da-z\.\-]+)\.([a-z\.]{2,6})$]]></value>
        <value code="url"><![CDATA[^(\w+:\/\/)?[\da-z\.\-]+\.[a-z\.]{2,6}[#&+_\?\/\w \.\-=]*$]]></value>
        <value code="id"><![CDATA[^[A-Z0-9]{16,20}$]]></value>
    </enum>
    <enum name="gender">
        <vlaue code="1">男</vlaue>
        <vlaue code="0">女</vlaue>
        <vlaue code="*">未知</vlaue>
    </enum>
    <enum name="sexual">
        <value code="0">正常</value>
        <value code="*">未知</value>
    </enum>

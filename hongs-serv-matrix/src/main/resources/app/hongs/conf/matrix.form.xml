        <field name="icon" text="图标" type="file" rule="Thumb">
            <param name="href">static/upload/matrix/icon</param>
            <param name="path">static/upload/matrix/icon</param>
        </field>
    </form>
    <form name="form">
        <field name="state" text="状态" type="enum">
            <param name="enum">form_state</param>
        </field>
    </form>
    <form name="form_fork">
        <field name="user" text="用户">
            <param name="data-vk">id</param>
            <param name="data-tk">name</param>
            <param name="data-at">centra/member/user/list</param>
            <param name="data-al">centra/member/user/pick.html</param>
        </field>
    </form>
    <enum name="form_state">
        <value code="1">正常</value>
        <value code="2">冻结</value>
        <value code="0">删除</value>
    </enum>
</root>